{
  "manifest_version": 2,

  "name": "YouTube Expander",
  "description": "Expands the current YouTube video to fill the window.",
  "version": "1.0.0",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon16.png"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
